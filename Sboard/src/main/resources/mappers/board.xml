<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.sboard.dao.BoardDao">
	<insert id="insertArticle" useGeneratedKeys="true" keyProperty="seq">
		INSERT INTO `Jboard_article` SET
			`title`=#{title},	
			`content`=#{content},	
			`uid`=#{uid},	<!-- file은 나중에 -->
			`regip`=#{regip},	
			`rdate`=NOW();	
	</insert>
	<insert id="insertFile">
		INSERT INTO `Jboard_file` SET
			`parent`=#{parent},
			`oriName`=#{oriName},
			`newName`=#{newName},
			`rdate`=NOW();	
	</insert>
	<select id="selectArticle" 	resultType="kr.co.sboard.vo.ArticleVo"></select>
	<select id="selectArticles" resultType="kr.co.sboard.vo.ArticleVo">
		SELECT a.*, b.nick FROM `Jboard_article` AS a
		JOIN `Jboard_member` AS b ON a.uid=b.uid
		WHERE `parent`=0 AND `cate`='free'
		ORDER BY `seq` DESC
		LIMIT #{start}, 10;	 
	</select>
	
	<select id="selectCountTotal" resultType="int">
		SELECT COUNT(`seq`) FROM `Jboard_article` WHERE `parent`=0;
	</select>
	
	<update id="updateArticle"></update>
	<delete id="deleteArticle"></delete>
</mapper>